---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import WhatsAppFloatingButton from "../../components/WhatsAppFloatingButton";
import SchemaMarkup from "../../components/SchemaMarkup.astro";
import blogPosts from "../../data/blog-posts.json";
import { Calendar, ArrowLeft, Tag } from "lucide-react";

export function getStaticPaths() {
    return blogPosts.map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;

// Posts relacionados (mesma categoria)
const relatedPosts = blogPosts
    .filter((p) => p.category === post.category && p.id !== post.id)
    .slice(0, 2);

const base = import.meta.env.BASE_URL;

const articleSchema = {
    "@context": "https://schema.org",
    "@type": "Article",
    headline: post.title,
    description: post.excerpt,
    image: post.image.startsWith("http")
        ? post.image
        : `https://ordt.com.br${post.image}`,
    author: {
        "@type": "Organization",
        name: "O Rei da Tela",
        url: "https://ordt.com.br",
    },
    publisher: {
        "@type": "Organization",
        name: "O Rei da Tela",
        logo: {
            "@type": "ImageObject",
            url: "https://ordt.com.br/logo-oficial.png",
        },
    },
    datePublished: post.date,
    dateModified: post.date,
};
---

<Layout title={`${post.title} | O Rei da Tela`} description={post.excerpt}>
    <SchemaMarkup type="Article" data={articleSchema} />
    <Header />

    <main class="pt-32">
        <!-- Hero do Artigo -->
        <section class="bg-brand-dark py-16 relative overflow-hidden">
            <div
                class="absolute inset-0 opacity-10"
                style="background-image: radial-gradient(#C5A059 1px, transparent 1px); background-size: 30px 30px;"
            >
            </div>

            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <a
                    href={`${base}blog`}
                    class="inline-flex items-center gap-2 text-brand-gold hover:text-white transition-colors mb-8"
                >
                    <ArrowLeft className="w-4 h-4" />
                    Voltar para o Blog
                </a>
                <div class="flex items-center gap-4 mb-6">
                    <span
                        class="px-4 py-1 bg-brand-gold text-brand-navy text-xs font-black uppercase rounded-full"
                    >
                        {post.category}
                    </span>
                    <div class="flex items-center gap-2 text-white/50 text-sm">
                        <Calendar className="w-4 h-4" />
                        <span
                            >{
                                new Date(post.date).toLocaleDateString("pt-BR")
                            }</span
                        >
                    </div>
                </div>
                <h1
                    class="text-4xl lg:text-5xl font-black text-white mb-6 tracking-tight leading-tight"
                >
                    {post.title}
                </h1>
                <p class="text-xl text-white/60">
                    {post.excerpt}
                </p>
            </div>
        </section>

        <!-- Imagem Principal -->
        <section class="bg-white py-0">
            <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8">
                <img
                    src={post.image}
                    alt={post.image_alt || post.title}
                    class="w-full aspect-video object-cover rounded-3xl shadow-2xl"
                />
            </div>
        </section>

        <!-- Conteúdo -->
        <section class="py-16 bg-white">
            <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
                <article class="prose prose-lg prose-gray max-w-none">
                    <div
                        class="blog-content"
                        set:html={post.content.replace(/\n/g, "<br/>")}
                    />

                    <div
                        class="mt-16 pt-10 border-t border-gray-100 italic text-gray-500 text-sm flex items-center gap-4"
                    >
                        <img
                            src={`${base}logo-oficial.png`}
                            alt="O Rei da Tela Expert"
                            class="w-10 h-10 object-contain opacity-50"
                        />
                        <span
                            >Artigo revisado por especialistas técnicos do <strong
                                >O Rei da Tela Salvador</strong
                            >. Especialistas em componentes premium e
                            microssoldagem avançada.</span
                        >
                    </div>

                    <h2 class="text-2xl font-black text-brand-navy mt-12 mb-6">
                        Por que escolher O Rei da Tela?
                    </h2>
                    <ul class="space-y-3 text-gray-600">
                        <li class="flex items-start gap-3">
                            <span
                                class="w-2 h-2 bg-brand-gold rounded-full mt-2"
                            ></span>
                            <span
                                ><strong>Garantia de 3 meses</strong> em todos os
                                serviços</span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <span
                                class="w-2 h-2 bg-brand-gold rounded-full mt-2"
                            ></span>
                            <span
                                ><strong>Especialistas certificados</strong> com anos
                                de experiência</span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <span
                                class="w-2 h-2 bg-brand-gold rounded-full mt-2"
                            ></span>
                            <span
                                ><strong>Delivery grátis</strong> em Salvador e região</span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <span
                                class="w-2 h-2 bg-brand-gold rounded-full mt-2"
                            ></span>
                            <span
                                ><strong>Peças premium</strong> de alta qualidade</span
                            >
                        </li>
                    </ul>

                    <div
                        class="mt-12 p-8 bg-brand-navy rounded-3xl text-center"
                    >
                        <h3 class="text-2xl font-black text-white mb-4">
                            Precisa de Assistência?
                        </h3>
                        <p class="text-white/60 mb-8">
                            Escolha a melhor opção para você agora mesmo:
                        </p>
                        <div
                            class="flex flex-col sm:flex-row gap-4 justify-center"
                        >
                            <a
                                href="https://wa.me/557194142627?text=Olá, li o artigo sobre {post.title} e gostaria de um orçamento"
                                class="inline-flex items-center justify-center gap-3 bg-brand-gold text-brand-navy px-8 py-4 rounded-full font-black hover:bg-white transition-all w-full sm:w-auto"
                            >
                                Falar no WhatsApp
                            </a>
                            <a
                                href={`${base}#orcamento`}
                                class="inline-flex items-center justify-center gap-3 bg-white/10 text-white border border-white/20 px-8 py-4 rounded-full font-black hover:bg-white/20 transition-all w-full sm:w-auto"
                            >
                                Simular Orçamento Online
                            </a>
                        </div>
                    </div>
                </article>
            </div>
        </section>

        <!-- Posts Relacionados -->
        {
            relatedPosts.length > 0 && (
                <section class="py-16 bg-gray-50">
                    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
                        <h2 class="text-2xl font-black text-brand-navy mb-8 text-center">
                            Artigos Relacionados
                        </h2>
                        <div class="grid md:grid-cols-2 gap-8">
                            {relatedPosts.map((related) => (
                                <a
                                    href={`/blog/${related.slug}`}
                                    class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all group"
                                >
                                    <div class="aspect-video overflow-hidden">
                                        <img
                                            src={related.image}
                                            alt={related.title}
                                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                        />
                                    </div>
                                    <div class="p-6">
                                        <span class="text-xs font-bold text-brand-gold uppercase">
                                            {related.category}
                                        </span>
                                        <h3 class="text-lg font-black text-brand-navy mt-2 group-hover:text-brand-gold transition-colors">
                                            {related.title}
                                        </h3>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>
                </section>
            )
        }
    </main>

    <WhatsAppFloatingButton client:idle />
    <Footer />
</Layout>
